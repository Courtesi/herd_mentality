# FastAPI Configuration
# Copy this to .env and fill in your values

# Redis Configuration (shared with Spring Boot)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_KEY_PREFIX=python:

# Cache TTL settings (in seconds)
CACHE_TTL_SHORT=300     # 5 minutes
CACHE_TTL_MEDIUM=3600   # 1 hour
CACHE_TTL_LONG=86400    # 1 day

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=prediction_investor

# Kalshi API Configuration (will inherit from parent .env)
KALSHI_API_KEY=your-kalshi-api-key
KALSHI_RSA_KEY_PATH=path/to/your/private-key
KALSHI_BASE_URL=https://trading-api.kalshi.com/trade-api/v2

# Bot Configuration
BOT_STATUS_ENDPOINT=http://localhost:9000/status
BOT_TRADES_ENDPOINT=http://localhost:9000/trades